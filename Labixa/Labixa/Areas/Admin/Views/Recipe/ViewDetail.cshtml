
@{
    Layout = null;
}
@model Labixa.Areas.Admin.ViewModel.RecipeViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Online Cookbook</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/Cookbook/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Cookbook/css/summernote.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>

<!-- Custom CSS -->
<link href="~/Content/Cookbook/css/editor.css" rel="stylesheet">
<link href="~/Content/Cookbook/css/recipe.css" rel="stylesheet">

    </head>

<body class="no-touch">

    <!-- jQuery -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <!--<script src="js/jquery.js"></script>-->
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/Cookbook/js/bootstrap.min.js"></script>
    <script src="~/Content/Cookbook/js/summernote.min.js"></script>

    <!--Custom JavaScript
    <script src="js/script.js"></script>-->

    <script>
        var edit = function () {
            $('.summernote').summernote({
                height: 250,
                focus: true
            });

            var divHtml = $("#recipe_name").html();
            var editableText = $("<textarea style=\"width: 950px; height: 40px; resize: none\" />");
            editableText.val(divHtml);
            $("#recipe_name").html(editableText);
            $("#save").show();
            $("#edit").hide();
        };
        var save = function () {
            var aHTML = $('.summernote').code(); //save HTML If you need(aHTML: array).
            $('.summernote').destroy();
            var recipeName = $("#recipe_name>textarea").val();
            $("#recipe_name").html(recipeName);
            $("#edit").show();
            $("#save").hide();
        };
    </script>


    <!--Menu bar-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2" id="leftbar">
                <!-- Left column -->
                <div class="menu-bar">
                    <a href="#" title="Online Cookbook">
                        <img class="logo" alt="Logo" src="~/Content/Cookbook/images/icon-chef.png"></img>
                    </a>
                </div>
                <a id="edit" class="btn btn-info" href="/Recipe/Edit?id=@Model.Id" type="button">
                    <span class="glyphicon glyphicon-pencil"></span> Edit
                </a>
                <a id="edit" href="/Dashboard/Homepage" class="btn btn-success" type="button">
                    <span class="glyphicon glyphicon-circle-arrow-left"></span> Back
                </a>
            </div>


            <!--Main content-->
            <div class="col-sm-10" id="main-content">
                <!-- column 2 -->
                <div class="well">
                    <div class="recipe_icon"></div>
                    <div id="recipe_name">@Model.Name</div>
                </div>

                <div id="complete_content">
                    <div id="recipe_content">
                        <div id="instruction">
                            <div class="upload_image">
                                <img id="preview_image" title="recipe image" alt="recipe-image" src="@Model.URL">
                            </div>
                            
                            <h2>Instruction</h2>
                            <div class="summernote instruction_content">
                                @Html.DisplayFor(model => model.Instruction)
                               
                            </div>
                        </div>
                        <div class="ingredient">
                            <h2>Ingredients</h2>
                            <div class="summernote ingredient_content">
                                @Html.DisplayFor(model => model.Ingredient)
                               
                            </div>
                        </div>
                    </div>
                </div>

            </div>


        </div>

    </div>




</body>
</html>